---
// /src/pages/en/articles/index.astro
import Layout from "../../../layouts/Layout.astro";
const title = "Articles";
const description = "Latest articles about memes and entertainment.";
---

<Layout {title} {description}>
  <ul class="articles-list">
    <li><a href="/en/articles/history">The History of Memes</a></li>
    <li><a href="/en/articles/top-memes">Top Memes of 2025</a></li>
    <li><a href="/en/articles/how-to-meme">How to Make a Funny Meme</a></li>
  </ul>
  </Layout>
  
  <style>
    .articles-list {
      list-style: none;
      padding: 2rem;        /* padding للصفحة */
      margin: 0 auto;
      max-width: 720px;     /* عشان تكون في النص */
      display: flex;
      flex-direction: column;
      gap: 1rem;            /* مسافة بين العناصر */
    }
    
    .articles-list li a {
      display: block;
      padding: 1rem 1.5rem;      /* padding جوه كل بطاقة */
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 3px 8px rgba(0,0,0,0.05);
      text-decoration: none;
      color: #1f8ef1;
      font-weight: bold;
      transition: transform 0.1s ease, box-shadow 0.1s ease;
    }
    
    .articles-list li a:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    </style>