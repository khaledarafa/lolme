---
// src/pages/meme-en.astro
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Meme Generator - LOLME">
  <!-- <h1 style="text-align:center; margin-bottom:1rem;">ğŸ“¸ Meme Generator</h1> -->
  
  <div style="max-width:1200px; margin:0 auto; display:flex; flex-wrap:wrap; gap:0.0rem; padding: 0 0.5rem; align-items:flex-start;" >

    <!-- controls -->
    <div id="controls-container" style="flex:1 1 400px; min-width:320px;">
      <div style="flex:1 1 320px; min-width:280px; padding: 0px 5px;">
        <label
          >Select a preset image:
          <select id="preset-select" style="width:100%; margin-top:0.4rem;">
            <option value="/memes/drake.jpg">Drake</option>
            <option value="/memes/doge.jpg">Doge</option>
            <option value="/memes/crying.jpg">Crying</option>
          </select>
        </label>

        <label><input type="checkbox" id="darkOverlay" /> Dark overlay</label>
        <label ><input type="checkbox" id="blurBackground" /> Blur background</label >

        <label style="display:block; margin-top:0.6rem;">
          Or upload an image:
          <input type="file" id="upload-image" accept="image/*" />
        </label>

        <label for="category" style="margin-top:0.6rem;" >ğŸ¯ Choose text category:</label >
        <select id="category" style="width:100%; margin-top:0.4rem;">
          <option value="any">ğŸ² Random from any</option>
        </select>

        <hr style="margin:12px 0;" />

        <div style="display:flex; gap:0.5rem; align-items:center;">
          <button id="add-text" class="btn" style="flex:1;">â• Add text</button>
          <button id="random-meme" class="btn" style="flex:1; background:#3498db;">ğŸ² Random</button >
        </div>

        <div id="layers-container" style="margin-top:12px;"></div>

        <hr style="margin:12px 0;" />

        <div id="font-buttons" style="display:flex; flex-wrap:wrap; gap:6px; margin:10px 0;">
          <button class="font-btn" data-font="Impact" style="font-family:Impact;">Impact</button>
          <button class="font-btn" data-font="Anton" style="font-family:Anton;">Anton</button>
          <button class="font-btn" data-font="Arial" style="font-family:Arial, sans-serif;">Arial</button>
          <button class="font-btn" data-font="Roboto" style="font-family:Roboto, sans-serif;">Roboto</button>
          <button class="font-btn" data-font="'Comic Sans MS'" style="font-family:'Comic Sans MS', cursive;">Comic Sans</button>
          <button class="font-btn" data-font="'Courier New'" style="font-family:'Courier New', monospace;">Courier</button>
        </div>
        
        <div style="display:flex; gap:0.6rem;">
          <button id="download-btn" class="btn" style="flex:1; background:#2ecc71;">â¬‡ï¸ Download</button >
          <button id="share-btn" class="btn" style="flex:1; background:#9b59b6;" >ğŸ”— Share</button >
        </div>

        <div style="margin-top:8px; font-size:0.9rem; color:#666;">
          Tips: Click any text layer to edit it. Drag the text to move it.
        </div>
      </div>
    </div>
    
        <!-- canvas -->
        <div style="flex:2 1 600px; min-width:300px;">
          <div style="border:1px solid #ddd; display:inline-block; background:#f6f6f6; width:100%;" >
            <canvas id="memeCanvas" style="display: flex;"></canvas>
          </div>
    
          <!-- AdSense responsive ad -->
          <div style="width:100%; text-align:center; margin-top:12px;">
            <ins
              class="adsbygoogle"
              style="display:block"
              data-ad-client="ca-pub-XXXXXXXXXXXX"
              data-ad-slot="YYYYYYYYYY"
              data-ad-format="auto"
              data-full-width-responsive="true"></ins>
          </div>
        </div>
  </div>
  <script type="module" src="/js/meme-en.js"></script>
</Layout>
